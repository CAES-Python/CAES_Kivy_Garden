<My_Layout>:
	Vertical_Gauge:
		id:my_v
		rolling_value:knob1.value
		int_valued: False
		drag_threshold:'0sp'
	Label:
		text:''
	BoxLayout:
		orientation:'vertical'
		Label:
			text:''
		Knob:
			id: knob1
			size:150,150
			value: 0
			min: 0
			max: 10
			step: 1
			knobimg_source: "/usr/lib/python2.7/dist-packages/kivy/garden/knob/img/knob_metal.png"
			knobimg_size: 1
			show_label: False
			show_marker: False
		Label:
			text:''
	BoxLayout:
		orientation:'vertical'
		Label:
			text:'gauge value: '+ str(my_v.rolling_value)
		Label:
			text:'knob value: '+ str(knob1.value)
